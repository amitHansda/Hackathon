@using ProjectHappyFace.UI.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<img src="" />
<style>
    body{
        background-image:url("~/../../Images/paper-background.jpg")
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">
                            <a class="active" id="login-form-link">Secure Login</a>
                        </div>
                        
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div id="divLoginButtons" class="col-sm-12">
                            <div>
                                @Html.ActionLink("Login using your camera", "LoginCam", new { ReturnUrl = ViewBag.ReturnUrl },new { @class= "btn btn-primary btn-lg btn-block"})
                                                           
                            </div>
                        </div>
                        <div class="col-sm-12" style="display:none">
                            @using (Html.BeginForm("Login","Account",new { ReturnUrl = ViewBag.ReturnUrl },FormMethod.Post, new { @class="form-horizontal"}))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                    <div class="col-md-10">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            @Html.CheckBoxFor(m => m.RememberMe)
                                            @Html.LabelFor(m => m.RememberMe)
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <button type="submit">
                                            <span class="glyphicon glyphicon-circle-arrow-right"></span>&nbsp; Secure Login
                                        </button>
                                        @*<input type="submit" value="Log in" class="btn btn-default" />*@
                                        @Html.ActionLink("Back", "Login", null, new { @class = "btn btn-danger" })
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <hr />
                        <div class="col-sm-12">
                            <span>Do not have a User Id?</span>
                        </div>
                        <div class="col-sm-12">
                            @Html.ActionLink("Register as a new user","Register",null,new { @class= "btn btn-default btn-block" })
                            @*<button class="" id="btnRegister" type="button">
                                Register
                            </button>*@
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}